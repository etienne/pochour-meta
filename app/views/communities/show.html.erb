<%= link_to t(:communities), :root, class: :back %>
<h1><%= @community.name %>&nbsp;<%= link_to t(:edit), edit_community_path(@community), class: 'mini' %></h1>

<%= render partial: "shared/articles", locals: { entity: @community } %>

<section class="filters">
  <h3><%= t :authors %></h3>
  <ul>
    <% @community.users.each do |u| %>
    <li>
      <%= link_to u.name, u %>
      <span class="count"><%= u.articles.where(community: @community).size %></span>
    </li>
    <% end %>
  </ul>
</section>