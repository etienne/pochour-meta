<div class="simple_form">
<%= form_for(@article) do |f| %>
  <div class="field">
    Publier dans:<br>
    <% @communities.each do |c| %>
      <%= f.label c.name %>
      <%= f.check_box(:community_ids, { multiple: true }, c.id, nil) %>
    <% end %>
  </div>
  
  <div class="field">
    <%= f.text_field :title, autofocus: true, placeholder: t(:title) %>
  </div>

  <div class="field">
    <%= f.text_area :body, placeholder: t(:article) %>
  </div>

  <div class="actions">
    <% if @article.new_record? %>  
      <%= f.submit t :create %>
    <% else %>
      <%= f.submit t :edit %>
    <% end %>
  </div>
<% end %>
</div>